# SciTeX Environment Variables Template
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# =============================================================================
# Core Settings
# =============================================================================
# Base directory for SciTeX data (default: ~/.scitex)
SCITEX_DIR=~/.scitex

# Logging configuration
SCITEX_LOGGING_LEVEL=INFO
SCITEX_LOGGING_FORMAT=default
SCITEX_LOGGING_FORCE_COLOR=false

# Cache settings
SCITEX_CACHE_NORM=true

# =============================================================================
# UI & Notifications (scitex.ui)
# =============================================================================
# Default notification backend: audio, email, desktop, webhook
SCITEX_UI_DEFAULT_BACKEND=audio

# Email notifications
SCITEX_UI_EMAIL_NOTIFICATION_TO=your-email@example.com
SCITEX_UI_EMAIL_NOTIFICATION_FROM=noreply@scitex.ai

# Webhook notifications (Slack, Discord, etc.)
SCITEX_UI_WEBHOOK_URL=

# Email Service (scitex.ai domain)
# All emails share the same password
SCITEX_UI_EMAIL_PASSWORD=

# Available email addresses
SCITEX_UI_EMAIL_ADMIN=admin@scitex.ai
SCITEX_UI_EMAIL_AGENT=agent@scitex.ai
SCITEX_UI_EMAIL_SUPPORT=support@scitex.ai
SCITEX_UI_EMAIL_DEV=dev@scitex.ai
SCITEX_UI_EMAIL_INFO=info@scitex.ai
SCITEX_UI_EMAIL_SOCIAL=social@scitex.ai
SCITEX_UI_EMAIL_SECURITY=security@scitex.ai
SCITEX_UI_EMAIL_LEGAL=legal@scitex.ai
SCITEX_UI_EMAIL_NOREPLY=no-reply@scitex.ai

# SMTP/POP settings
SCITEX_UI_EMAIL_SMTP_SERVER=mail1030.onamae.ne.jp
SCITEX_UI_EMAIL_SMTP_PORT=587
SCITEX_UI_EMAIL_POP_SERVER=mail1030.onamae.ne.jp
SCITEX_UI_EMAIL_POP_PORT=995

# =============================================================================
# Scholar Module (scitex.scholar)
# =============================================================================
# Authentication - OpenAthens (institutional access)
SCITEX_SCHOLAR_OPENATHENS_ENABLED=false
SCITEX_SCHOLAR_OPENATHENS_EMAIL=
SCITEX_SCHOLAR_OPENATHENS_USERNAME=
SCITEX_SCHOLAR_OPENATHENS_PASSWORD=

# Authentication - SSO (Single Sign-On)
SCITEX_SCHOLAR_SSO_EMAIL=
SCITEX_SCHOLAR_SSO_USERNAME=
SCITEX_SCHOLAR_SSO_PASSWORD=

# OpenURL resolver for institutional access
SCITEX_SCHOLAR_OPENURL_RESOLVER_URL=

# Email notifications for scholar operations
SCITEX_SCHOLAR_EMAIL_NOREPLY=no-reply@scitex.ai
SCITEX_SCHOLAR_EMAIL_PASSWORD=
SCITEX_SCHOLAR_EMAIL_SMTP_SERVER=mail.example.com
SCITEX_SCHOLAR_EMAIL_SMTP_PORT=587
SCITEX_SCHOLAR_EMAIL_SENDER_NAME=SciTeX Scholar
SCITEX_SCHOLAR_EMAIL_RECIPIENT=

# External APIs
SCITEX_SCHOLAR_CROSSREF_EMAIL=your-email@example.com
SCITEX_SCHOLAR_PUBMED_EMAIL=your-email@example.com
SCITEX_SCHOLAR_SEMANTIC_SCHOLAR_API_KEY=

# ZenRows (web scraping proxy)
SCITEX_SCHOLAR_ZENROWS_API_KEY=
SCITEX_SCHOLAR_ZENROWS_PROXY_USERNAME=
SCITEX_SCHOLAR_ZENROWS_PROXY_PASSWORD=
SCITEX_SCHOLAR_ZENROWS_PROXY_DOMAIN=superproxy.zenrows.com
SCITEX_SCHOLAR_ZENROWS_PROXY_PORT=1337
SCITEX_SCHOLAR_ZENROWS_PROXY_COUNTRY=us

# CAPTCHA solving
SCITEX_SCHOLAR_2CAPTCHA_API_KEY=
SCITEX_SCHOLAR_CAPTCHA_SOLVER_API_KEY=

# Zotero integration
SCITEX_SCHOLAR_ZOTERO_TRANSLATORS_DIR=

# Browser settings
SCITEX_SCHOLAR_BROWSER_BACKEND=local
SCITEX_SCHOLAR_PDF_MAX_PARALLEL=8
SCITEX_SCHOLAR_DEBUG_MODE=false

# =============================================================================
# Audio Module (scitex.audio)
# =============================================================================
# Mode: local (play on server), remote (play via relay), auto (detect)
SCITEX_AUDIO_MODE=auto

# ElevenLabs TTS API key
SCITEX_AUDIO_ELEVENLABS_API_KEY=

# Remote relay settings (for playing audio on local machine from remote server)
SCITEX_AUDIO_RELAY_URL=
SCITEX_AUDIO_RELAY_HOST=
SCITEX_AUDIO_RELAY_PORT=31293
SCITEX_AUDIO_PORT=31293

# =============================================================================
# Social Module (scitex.social)
# =============================================================================
# X/Twitter
SCITEX_SOCIAL_X_CONSUMER_KEY=
SCITEX_SOCIAL_X_CONSUMER_KEY_SECRET=
SCITEX_SOCIAL_X_ACCESS_TOKEN=
SCITEX_SOCIAL_X_ACCESS_TOKEN_SECRET=
SCITEX_SOCIAL_X_BEARER_TOKEN=

# LinkedIn
SCITEX_SOCIAL_LINKEDIN_CLIENT_ID=
SCITEX_SOCIAL_LINKEDIN_CLIENT_SECRET=
SCITEX_SOCIAL_LINKEDIN_ACCESS_TOKEN=

# Google Analytics
SCITEX_SOCIAL_GOOGLE_ANALYTICS_PROPERTY_ID=
SCITEX_SOCIAL_GOOGLE_ANALYTICS_MEASUREMENT_ID=
SCITEX_SOCIAL_GOOGLE_ANALYTICS_API_SECRET=
SCITEX_SOCIAL_GOOGLE_APPLICATION_CREDENTIALS=

# YouTube
SCITEX_SOCIAL_YOUTUBE_CLIENT_SECRETS_FILE=

# =============================================================================
# Cloud Module (scitex.cloud)
# =============================================================================
SCITEX_CLOUD_USERNAME=
SCITEX_CLOUD_PASSWORD=
SCITEX_CLOUD_DJANGO_SECRET_KEY=

# Database
SCITEX_CLOUD_DB_NAME=
SCITEX_CLOUD_DB_USER=
SCITEX_CLOUD_DB_PASSWORD=
SCITEX_CLOUD_DB_HOST=localhost
SCITEX_CLOUD_DB_PORT=5432

# =============================================================================
# Web Module (scitex.web)
# =============================================================================
SCITEX_WEB_DOWNLOADS_DIR=

# =============================================================================
# Plotting Module (scitex.plt)
# =============================================================================
SCITEX_PLT_STYLE=scitex
SCITEX_PLT_COLORS=
