# UI & Notifications (scitex.ui)

# Default notification backend: audio, email, desktop, webhook
SCITEX_UI_DEFAULT_BACKEND=audio

# Backend priority (comma-separated)
SCITEX_UI_BACKEND_PRIORITY=audio,desktop,email,webhook

# Level-specific backends (override default)
SCITEX_UI_INFO_BACKENDS=
SCITEX_UI_WARNING_BACKENDS=
SCITEX_UI_ERROR_BACKENDS=
SCITEX_UI_CRITICAL_BACKENDS=

# UI config path
SCITEX_UI_CONFIG=

# Email notifications
SCITEX_UI_EMAIL_NOTIFICATION_TO=your-email@example.com
SCITEX_UI_EMAIL_NOTIFICATION_FROM=noreply@scitex.ai

# Webhook notifications (Slack, Discord, etc.)
SCITEX_UI_WEBHOOK_URL=

# Email Service (scitex.ai domain)
# All emails share the same password
SCITEX_UI_EMAIL_PASSWORD=

# Available email addresses
SCITEX_UI_EMAIL_ADMIN=admin@scitex.ai
SCITEX_UI_EMAIL_AGENT=agent@scitex.ai
SCITEX_UI_EMAIL_SUPPORT=support@scitex.ai
SCITEX_UI_EMAIL_DEV=dev@scitex.ai
SCITEX_UI_EMAIL_INFO=info@scitex.ai
SCITEX_UI_EMAIL_SOCIAL=social@scitex.ai
SCITEX_UI_EMAIL_SECURITY=security@scitex.ai
SCITEX_UI_EMAIL_LEGAL=legal@scitex.ai
SCITEX_UI_EMAIL_NOREPLY=no-reply@scitex.ai

# SMTP/POP settings
SCITEX_UI_EMAIL_SMTP_SERVER=mail1030.onamae.ne.jp
SCITEX_UI_EMAIL_SMTP_PORT=587
SCITEX_UI_EMAIL_POP_SERVER=mail1030.onamae.ne.jp
SCITEX_UI_EMAIL_POP_PORT=995
