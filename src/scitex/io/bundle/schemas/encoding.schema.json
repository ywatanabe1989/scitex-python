{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://scitex.ai/schemas/fts/encoding.schema.json",
  "title": "FTS Encoding Schema",
  "description": "Schema for data-to-visual channel mappings",
  "type": "object",
  "properties": {
    "traces": {
      "type": "array",
      "description": "List of trace encodings",
      "items": {
        "type": "object",
        "required": ["trace_id"],
        "properties": {
          "trace_id": {
            "type": "string",
            "description": "Unique identifier for this trace"
          },
          "data_ref": {
            "type": "string",
            "description": "Path to data file"
          },
          "x": {
            "$ref": "#/definitions/channelEncoding"
          },
          "y": {
            "$ref": "#/definitions/channelEncoding"
          },
          "color": {
            "$ref": "#/definitions/channelEncoding"
          },
          "size": {
            "$ref": "#/definitions/channelEncoding"
          },
          "shape": {
            "$ref": "#/definitions/channelEncoding"
          },
          "group": {
            "$ref": "#/definitions/channelEncoding"
          },
          "error_y": {
            "type": "object",
            "properties": {
              "column": {"type": "string"},
              "type": {"type": "string", "enum": ["SEM", "SD", "CI95", "raw"]}
            }
          }
        }
      }
    },
    "legends": {
      "type": "object",
      "description": "Legend encoding definitions",
      "properties": {
        "color": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "linestyle": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        },
        "marker": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      }
    }
  },
  "definitions": {
    "channelEncoding": {
      "type": "object",
      "properties": {
        "column": {
          "type": "string",
          "description": "Column name in data file"
        },
        "scale": {
          "type": "string",
          "enum": ["linear", "log", "ordinal", "categorical"],
          "default": "linear"
        },
        "aggregate": {
          "type": "string",
          "enum": ["none", "mean", "median", "sum", "count"]
        }
      }
    }
  }
}
